<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ShoppingCartFragment">

    <ImageView
        android:id="@+id/icBackShoppingCart"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShoppingCartInfo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="112dp"
        android:text="Sepetim"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/icBackShoppingCart"
        app:layout_constraintStart_toEndOf="@+id/icBackShoppingCart"
        app:layout_constraintTop_toTopOf="@+id/icBackShoppingCart" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShoppingCartItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icBackShoppingCart" />
</androidx.constraintlayout.widget.ConstraintLayout>